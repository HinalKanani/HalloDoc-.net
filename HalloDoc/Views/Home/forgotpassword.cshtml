@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/Patient Pages/patientForgotPassword.css">

    <script src="https://kit.fontawesome.com/558bd69c1f.js" crossorigin="anonymous"></script>
    <script src="../js/bootstrap.bundle.min.js"></script>
    <title>Patient Forgot Password Page</title>
</head>

<body>
    <div class="position-relative ">
        <div class="login-bg-img position-absolute">
            <img src="../images/SRS Screen Shorts/11116016_415.jpg" alt=""
                class="img-fluid object-fit-cover h-100 w-100">
        </div>

        <div class="position-absolute top-0 end-0 m-4">
            <button type="button" class="btn btn-outline-dark border-info "><i class="bi bi-moon text-info fs-4"
                    id="btnSwitch"></i></button>
        </div>

        <div class="main-container">
            <div class="container login-container d-flex flex-column justify-content-between ms-auto me-auto pt-4 pb-5">
                <div class="text-center login-logo ">
                    <img src="../images/SRS Screen Shorts/logo.png" class="img-fluid" alt="Image Not Available">
                </div>
                <div class="mb-5 pb-5">
                    <div class="mb-3 mx-3">
                        <a asp-controller="Home" asp-action="patientLogin" class="text-info"
                            style="text-decoration: none;"><i class="fa-solid fa-angle-left"></i><b> Back</b></a>
                    </div>
                    <h2 class="mb-3 text-center mt-2 mb-4">Reset Your Password</h2>
                    <form class="mb-3">
                        <div class="form-floating mb-4 ">
                            <input type="text" class="form-control bg-transparent border-2 border-info"
                                id="exampleInputusername" placeholder="Username">
                            <label for="exampleInputusername" class="">Username</label>
                            <div class="user-icon position-absolute top-0 end-0 mx-3 my-2">
                                <i class="bi bi-person-circle fs-4"></i>
                            </div>
                        </div>

                        <div class="mb-4 pt-4 d-grid">
                            <button type="submit" class="btn btn-info text-light">Reset Password</button>
                        </div>
                        <div class="mb-4 text-center">
                            <a asp-controller="Home" asp-action="patientLogin" class="text-info "
                                style="text-decoration: none;"><i class="fa-solid fa-angle-left"></i><strong> Back To
                                    Login</strong></a>
                        </div>

                    </form>
                </div>
                <div class="mb-1 pt-lg-2 d-flex justify-content-center">
                    <a href="#" class="terms mx-2" style="text-decoration: none;">Terms of Condition </a>
                    <span class="terms">|</span>
                    <a href="#" class="terms mx-2" style="text-decoration: none;"> Privacy Policy</a>
                </div>
            </div>
        </div>

    </div>
    <script src="../js/darkmode.js"></script>
</body>

</html>