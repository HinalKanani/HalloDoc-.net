@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/Patient Pages/patientForgotPassword.css">

    <script src="https://kit.fontawesome.com/558bd69c1f.js" crossorigin="anonymous"></script>
    <script src="../js/bootstrap.bundle.min.js"></script>
    <title>Patient Forgot Password Page</title>
</head>

<body>
    <div class="position-relative ">
        <partial name="_headerPartialView" />
        

        <div class="main-container">
            <div class="container login-container d-flex flex-column justify-content-between ms-auto me-auto pt-4 pb-5">
                <div class="text-center login-logo ">
                    <img src="../images/SRS Screen Shorts/logo.png" class="img-fluid" alt="Image Not Available">
                </div>
                <div class="mb-5 pb-5">
                    <div class="mb-3 mx-3">
                        <a asp-controller="Home" asp-action="patientSide" class="text-info"
                           style="text-decoration: none;"><i class="fa-solid fa-angle-left"></i><b> Back</b></a>
                    </div>
                    <h2 class="mb-3 text-center mt-2 mb-4">Login To Your Account</h2>
                    <form class="mb-3">
                        <div class="form-floating mb-4 ">
                            <input type="email" class="form-control bg-transparent border-2 border-info"
                                   id="exampleInputemail" placeholder="Email">
                            <label for="exampleInputemail">Email</label>
                            <div class="user-icon position-absolute top-0 end-0 mx-3 my-2">
                                <i class="bi bi-person-circle fs-4"></i>
                            </div>
                        </div>
                        <div class="form-floating mb-4 ">
                            <input type="password" class="form-control bg-transparent border-2 border-info"
                                   id="exampleInputPassword1" placeholder="Password">
                            <label for="exampleInputPassword1">Password</label>


                        </div>
                        <div class="mb-4 pt-4 d-grid">
                            <button type="submit" class="btn btn-info text-light   ">Log In</button>
                        </div>
                        <div class="mb-4 text-center">
                            <a asp-controller="Home" asp-action="forgotpassword" class="text-info"
                               style="text-decoration: none;"><strong>Forgot Password?</strong></a>
                        </div>

                    </form>
                </div>
                <partial name="_footerPartialView" />
            </div>
        </div>

    </div>
    <script src="../js/darkmode.js"></script>
</body>

</html>