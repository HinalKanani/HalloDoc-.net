@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/Patient Pages/businessRequest.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://kit.fontawesome.com/558bd69c1f.js" crossorigin="anonymous"></script>
    <script src="../js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>
    <title>Patient Submit Request</title>
</head>

<body>
    <!-- Nav bar -->
    <nav class="d-flex justify-content-between align-items-center bg-light container-shadow position-sticky z-3 top-0 p-0">
        <div class="  login-logo text-center ">
            <img src="../images/SRS Screen Shorts/logo.png" class="img-fluid" alt="Image Not Available">
        </div>
        <div class="m-3 end-0 top-0 position-absolute ">
            <button type="button" class="btn btn-cnta btn-outline-dark border-info p-4  ">
                <i class="bi bi-moon text-info fs-4"
                   id="btnSwitch"></i>
            </button>
        </div>
    </nav>

    <div class="position-relative pb-5main-container outerBox  ">


        <div class="my-3 mx-3 d-flex  flex-row-reverse p-0 m-5   ">
            <button class="border-info p-3 rounded-2  text-center">
                <a asp-controller="Home" asp-action="patientSubmitReq" class="text-info  " style="text-decoration: none;">
                    <i class="fa-solid fa-angle-left"></i><b id="back "> Back</b>
                </a>
            </button>
        </div>


        <div class="container innerbox" style="background-color: rgb(205, 204, 204);">

            <!-- form-content -->
            <form action="" class=" p-3">

                <!-- Patient Info -->
                <div class="row mt-4 ">
                    <h4>Concierge Information</h4>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputFirst" placeholder="First Name"
                               aria-label="First Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                          padding-bottom: 1.625rem;">
                        <label class="ms-4 " for="floatingInputFirst">First Name</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputLast" placeholder="Last Name"
                               aria-label="Last Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                          padding-bottom: 1.625rem;">
                        <label class="ms-4  " for="floatingInputLast">Last Name</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <div class='input-group date' id='picker'>
                            <input type='text' class="form-control" placeholder="Date Of Birth" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                      padding-bottom: 1.625rem;">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                    padding-bottom: 1.625rem;">
                        <label class="ms-4" for="floatingInput">Email address</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputLast" placeholder="Last Name"
                               aria-label="Last Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                      padding-bottom: 1.625rem;">
                        <label class="ms-4  " for="floatingInputLast">Hotel /Property Name</label>
                    </div>

                </div>
                <!-- Concierge Location -->
                <div class="row mt-4">
                    <h4>Concierge Location</h4>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputStreet" placeholder="Street Name"
                               aria-label="Street Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
              padding-bottom: 1.625rem;">
                        <label class="ms-4" for="floatingInputFirst">Street</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputCity" placeholder="City Name"
                               aria-label="City Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
              padding-bottom: 1.625rem;">
                        <label class="ms-4   " for="floatingInputLast">City</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputState" placeholder="State Name"
                               aria-label="State Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
              padding-bottom: 1.625rem;">
                        <label class="ms-4 " for="floatingInputFirst">State</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control" id="validationCustom05" placeholder="Zip" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
          padding-bottom: 1.625rem;">
                        <label class="form-label ms-4" for="validationCustom05">Zip Code</label>
                    </div>





                </div>
                <!-- Patient Contact Info -->
                <div class="row mt-4">
                    <h4>Patient Information</h4>
                    <div class=" col-12 mt-4 form-floating">
                        <textarea class="form-control textBg " placeholder="Type information about Patient" id="floatingTextarea2"
                                  style="text-align:left; padding-left:15px; padding-top: 3.625rem;height: 100px; padding-bottom: 1.625rem;"></textarea>
                        <label style="text-wrap: wrap;" class="ms-2 " for="floatingTextarea2">Enter Brief Details Of Symptoms (Optional)</label>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputFirst" placeholder="First Name"
                               aria-label="First Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                        padding-bottom: 1.625rem;">
                        <label class="ms-4 " for="floatingInputFirst">First Name</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputLast" placeholder="Last Name"
                               aria-label="Last Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                        padding-bottom: 1.625rem;">
                        <label class="ms-4  " for="floatingInputLast">Last Name</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="tel" class="phone form-control " id="floatingInputcontact"
                               placeholder="99XXXXXXXX" aria-label="Contact Number" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                          padding-bottom: 1.625rem;">
                    </div>
                </div>

                <!-- Patient Contact Info -->
                <div class="row mt-4">
                    <h4>Patient Contact Information</h4>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                      padding-bottom: 1.625rem;">
                        <label class="ms-4" for="floatingInput">Email address</label>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="tel" class="phone1 form-control " id="floatingInputcontact"
                               placeholder="99XXXXXXXX" aria-label="Contact Number" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                              padding-bottom: 1.625rem;">
                    </div>
                </div>

                <!-- Patient Location -->
                <div class="row mt-4">
                    <h4>Patient Location</h4>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 xs-12 form-floating mt-3">
                        <input type="text" class="form-control " id="floatingInputSuite" placeholder="Suite Name"
                               aria-label="suite Name" style="text-align:left; padding-left:15px; padding-top: 3.625rem;
                          padding-bottom: 1.625rem;">
                        <label style="text-wrap: wrap;" class="ms-4 " for="floatingInputSuite">Room # / Suite (Optional)</label>
                    </div>




                </div>
                <!-- Submit & cancel button -->
                <div class="d-flex justify-content-end align-items-center mt-4 mb-1">
                    <input class="btn submit-cancel me-3" type="submit" value="Submit">
                    <input class="btn submit-cancel" type="reset" value="Cancel">
                </div>
            </form>
        </div>
        <footer class="d-flex justify-content-center align-items-center bg-secondary">
            <div class="p-4">
                <a class="footer-style" href="#">Terms of Condition</a>
                <span>&nbsp; &#124; &nbsp;</span>
                <a class="footer-style" href="#">Privacy Policy</a>
            </div>
        </footer>




    </div>
    <script src="../js/darkmode.js"></script>
</body>

</html>